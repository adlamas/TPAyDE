<h1 style="text-align: center;">Menú de hoy</h1>
<table border="1" width="60%" cellpadding="0" cellspacing="0" align="center" style="margin-bottom: 60px">
  <thead>
    <tr>
      <th>Platos</th>
      <th>Días disponibles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus_del_dia.each do |menu| %>
      <tr>
        <td><%= menu.dish %></td>
        <td><%= menu.day %></td>
        <td><%= link_to 'Editar', edit_menu_path(menu) %></td>
        <td><%= link_to 'Eliminar', menu, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div  style="margin-bottom: 60px" >
<%= link_to 'Crear nuevo menú', new_menu_path, :style => "color: white;", :class=>"btn btn-primary col-sm-2 col-sm-offset-5" %>
</div>
<br>

