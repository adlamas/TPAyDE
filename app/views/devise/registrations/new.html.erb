

<h2 style="text-align: center">Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:style => 'text-align: center', :class => 'col-sm-4 col-sm-offset-4'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :nombre %><br />
    <%= f.text_field :name, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :apellido %><br />
    <%= f.text_field :surname, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :legajo %><br />
    <%= f.number_field :legacy, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :"Fecha de nacimiento" %><br />
    <%= f.date_field :born, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :contraseña %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>

  <div class="actions", style="margin-top: 10px;">
    <%= f.submit "Registrarse", :class => "btn btn-success" %>
  </div>

  <div style="margin-top: 10px; margin-bottom: 40px;">
  <%= render "devise/shared/links", :name => 'Registrarse' %>
  </div>

<% end %>


