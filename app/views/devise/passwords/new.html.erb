<h2 style="text-align: center">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:style => 'text-align: center', :class => 'col-sm-4 col-sm-offset-4', method: :post}) do |f| %>
  <%= devise_error_messages! %>

  <div class="field", style="margin-top: 10px;">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
  </div>

  <div class="actions", style="margin-top: 10px;">
    <%= f.submit "Enviar password a mi Email", :class => 'btn btn-primary' %>
  </div>

  <div style="margin-top: 10px;">
  <%= render "devise/shared/links" %>
  </div>

<% end %>


